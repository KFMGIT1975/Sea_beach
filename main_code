///for sun
bool f=0;
void idle4()
{
    if(l<=400 && f==0){
        l+=dev/30;
        if(l>=400){
            f=1;
        }
    }
    else{
        l-=0.5;
        if(l<=0)f=0;
    }

    glutPostRedisplay();
}

/// for waves

void idle3()
{
    if(xxx<=10){
        xxx+=0.1;yyy+=.3;
    }
    else{xxx=0;yyy=0;}
   idle4();
}
///for ship
void idle2()
{
    if(k<=2000)k+=dev/30;
    else k=-300;
    idle3();
}

///for birds
void idle1()
{
    if(XX>=-1000&&XX<1500 &&YY>=-1000 &&YY<=1400){XX+=dev/20;YY+=.8;}
    else {XX= -100;YY= -100;}
    idle2();

}
///for cloud
void idle()
{
    if(X>=-700&&X<1500)X+=dev/60;
    if(X>=1500)X=-700;
    idle1();
}


void myinit()
{
    glClearColor(0.4,0.83,1.0 ,1.0);
    glColor3ub(237, 238, 252);
    glPointSize(2.0);
    glMatrixMode(GL_PROJECTION);
    glLoadIdentity();
    gluOrtho2D(0.0,1400.0,0.0,1170.0);
}
void display()
{
    glClear(GL_COLOR_BUFFER_BIT);
    draw_object();
    glFlush();
}
int main(int argc,char** argv)
{
    glutInit(&argc,argv);
    glutInitDisplayMode(GLUT_SINGLE|GLUT_RGB);
    glutInitWindowSize(1400,1170);
    glutInitWindowPosition(0,0);
    glutCreateWindow("Sea Beach");
    glutDisplayFunc(display);
    glutIdleFunc(idle);
    sndPlaySound("C:\\Users\\aminu\\downloads\\beach_final.wav",SND_ASYNC);
    myinit();

    glutMainLoop();
   return 0;
}
